<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimalMatchingGame.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid x:Name="AnimalButtons" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" x:Name="Button00" FontSize="36" Clicked="Button_Clicked" />
            <Button Grid.Row="0" Grid.Column="1" x:Name="Button01" FontSize="36" Clicked="Button_Clicked" />
            <Button Grid.Row="0" Grid.Column="2" x:Name="Button02" FontSize="36" Clicked="Button_Clicked" />
            <Button Grid.Row="0" Grid.Column="3" x:Name="Button03" FontSize="36" Clicked="Button_Clicked" />

            <Button Grid.Row="1" Grid.Column="0" x:Name="Button10" FontSize="36" Clicked="Button_Clicked" />
            <Button Grid.Row="1" Grid.Column="1" x:Name="Button11" FontSize="36" Clicked="Button_Clicked" />
            <Button Grid.Row="1" Grid.Column="2" x:Name="Button12" FontSize="36" Clicked="Button_Clicked" />
            <Button Grid.Row="1" Grid.Column="3" x:Name="Button13" FontSize="36" Clicked="Button_Clicked" />

            <Button Grid.Row="2" Grid.Column="0" x:Name="Button20" FontSize="36" Clicked="Button_Clicked" />
            <Button Grid.Row="2" Grid.Column="1" x:Name="Button21" FontSize="36" Clicked="Button_Clicked" />
            <Button Grid.Row="2" Grid.Column="2" x:Name="Button22" FontSize="36" Clicked="Button_Clicked" />
            <Button Grid.Row="2" Grid.Column="3" x:Name="Button23" FontSize="36" Clicked="Button_Clicked" />

            <Button Grid.Row="3" Grid.Column="0" x:Name="Button30" FontSize="36" Clicked="Button_Clicked" />
            <Button Grid.Row="3" Grid.Column="1" x:Name="Button31" FontSize="36" Clicked="Button_Clicked" />
            <Button Grid.Row="3" Grid.Column="2" x:Name="Button32" FontSize="36" Clicked="Button_Clicked" />
            <Button Grid.Row="3" Grid.Column="3" x:Name="Button33" FontSize="36" Clicked="Button_Clicked" />

            <Button x:Name="PlayAgainButton" 
                    Grid.Row="0" Grid.RowSpan="4" 
                    Grid.Column="0" Grid.ColumnSpan="4"
                    Text="Play again?"
                    FontSize="36"
                    BackgroundColor="LightBlue"
                    Clicked="PlayAgainButton_Clicked"
                    IsVisible="True" />
        </Grid>

        <Label x:Name="TimeElapsed" 
               Grid.Row="1" 
               Text="Time elapsed: 0.0s"
               FontSize="18"
               HorizontalOptions="Center"
               Margin="10" />
    </Grid>

</ContentPage>